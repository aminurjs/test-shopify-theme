<section>
  {% for product in product.collections %}
    <div class="flex items-center justify-between p-4 bg-gray-100">
      <h1 class="text-2xl font-bold text-gray-800">{{ product.title }}</h1>
      <span class="text-lg text-gray-600">{{ product.price | money }}</span>
    </div>
  {% endfor %}
</section>

{% schema %}
{
  "name": "banner",
  "settings": [],
  "presets": [{ "name": "banner" }]
}
{% endschema %}
